	<script>
            var div = document.getElementById("flash_massage"),
                func = function () {
                    div.style.opacity = 0;
                    div.style.bottom = -1000 + 'px';
                };
            if (div.firstElementChild.firstElementChild === null) {
                div.style.opacity = 0;
            }
            else {
                div.style.opacity = 1;
                div.style.bottom = 36 + 'px';
                div.style.transition = 1 + 's';
                setTimeout(func, 10000);
            }
	</script>
