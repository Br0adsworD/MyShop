{% extends "@MyShopAdmin/index.html.twig" %}

{% block script %}
	<script type="text/javascript">
        function updateMajorPhoto(id) {
            var url = Routing.generate('update_major_photo_for_product_Ajax',{'idPhoto':id});
            $.get(url,function (data) {
            });
        }
	</script>
{% endblock %}

{% block right %}
	<h1>Фотографии товара <span>{{product.model}}</span></h1>
	<a href="{{path('add_photo_for_product',{idProduct:product.id})}}">Добавить новое фото</a>
	{% for photo in product.photo %}
		<p>{{photo.name}}</p>
		<a href="/photos/big/{{photo.bigfilename}}">
			<img src="/photos/small/{{photo.smallfilename}}">
			<img src="/photos/mini/{{photo.minifilename}}">
		</a>
		<p>{{photo.datacreate.format("d.m.y H:i")}}</p>
		<a href="{{path('delete_photo_for_product',{idPhoto:photo.id})}}">Удалить</a>
		<a href="{{path('update_photo_for_product',{idPhoto:photo.id})}}">Редактировать</a>
		<a href="#" onclick="updateMajorPhoto({{ photo.id}})">Сделать главной</a>
	{% endfor%}
{% endblock %}